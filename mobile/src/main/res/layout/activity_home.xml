<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <include layout="@layout/toolbar_home"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/grey_200"
        android:clipChildren="false">

      <de.scout.fireplace.ui.FloatingCardStackLayout
          android:id="@+id/stack"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/action_pass"
            android:contentDescription="@string/action_pass"
            android:background="@drawable/round_button"
            android:layout_width="@dimen/action_size_large"
            android:layout_height="@dimen/action_size_large"
            android:layout_marginTop="@dimen/action_margin"
            android:layout_marginRight="@dimen/action_half_margin"
            android:layout_marginEnd="@dimen/action_half_margin"
            android:layout_marginBottom="@dimen/action_margin"
            android:padding="@dimen/action_padding"
            android:src="@drawable/ic_pass"/>

        <ImageButton
            android:id="@+id/action_like"
            android:contentDescription="@string/action_like"
            android:background="@drawable/round_button"
            android:layout_width="@dimen/action_size_large"
            android:layout_height="@dimen/action_size_large"
            android:layout_marginTop="@dimen/action_margin"
            android:layout_marginLeft="@dimen/action_half_margin"
            android:layout_marginStart="@dimen/action_half_margin"
            android:layout_marginBottom="@dimen/action_margin"
            android:padding="@dimen/action_padding"
            android:src="@drawable/ic_like"/>

      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
