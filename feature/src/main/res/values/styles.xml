<resources>

  <style name="CardViewStyle" parent="android:Widget.TextView">
    <item name="android:foreground">@drawable/card_background</item>
    <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    <item name="cardElevation">@dimen/card_elevation</item>
    <item name="cardPreventCornerOverlap">false</item>
    <item name="cardUseCompatPadding">true</item>
  </style>

  <style name="Theme.Fireplace.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>

    <item name="android:layout_marginTop">@dimen/default_margin</item>
    <item name="android:layout_marginBottom">@dimen/default_margin</item>

    <item name="android:textColor">@color/dark_grey</item>
  </style>
</resources>
